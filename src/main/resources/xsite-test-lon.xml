<infinispan
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="urn:infinispan:config:8.0 http://www.infinispan.org/schemas/infinispan-config-8.0.xsd"
        xmlns="urn:infinispan:config:8.0">

    

    <namedCache name="LonCache">
        
        <site local="LON"/>

        <transport clusterName="infinispan-cluster-LON" distributedSyncTimeout="50000" nodeName="LON-NodeName" machineId="m1"
                   rackId="r1" siteId="s1">
            <!-- Note that the JGroups transport uses sensible defaults if no configuration property is defined. -->
            <properties>
                <!--UDP jgroups-udp.xml was here-->
                <property name="configurationFile" value="jgroups-LON-udp.xml"/>
            </properties>
            <!-- See the JGroupsTransport javadocs for more flags -->
        </transport>
        <globalJmxStatistics enabled="true" jmxDomain="org.infinispan2"/>
        
        <clustering mode="DIST"></clustering>
        <sites>
            <backups backupSites="NYC">
                <backup site="NYC" strategy="ASYNC" timeout="12003"/>
                <!--<backup site="SFO" strategy="ASYNC"/>-->
            </backups>
            <backupFor/>
        </sites>
        <jmxStatistics enabled="true"/>

