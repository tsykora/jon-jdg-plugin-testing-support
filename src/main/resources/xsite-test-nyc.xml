                   rackId="r2" siteId="s2">
            <!-- Note that the JGroups transport uses sensible defaults if no configuration property is defined. -->
            <properties>
                <!--UDP jgroups-udp.xml was here-->
                <!-- mcast_addr have to be different from LON jgroups -->

                <property name="configurationFile" value="jgroups-NYC-udp.xml"/>

            </properties>
            <!-- See the JGroupsTransport javadocs for more flags -->
        </transport>
        <globalJmxStatistics enabled="true" jmxDomain="org.infinispan3"/>
        
        <clustering mode="DIST"></clustering>
        <sites>
            <backups/>
            <backupFor remoteCache="LonCache" remoteSite="LON"/>
        </sites>
        <jmxStatistics enabled="true"/>
    </namedCache>

